{
  "name": "@geekist/llm-core",
  "version": "0.1.0",
  "description": "Composable workflow + adapter core for the JS/TS LLM ecosystem.",
  "keywords": [
    "llm",
    "workflow",
    "pipeline",
    "rag",
    "agents",
    "tools",
    "adapters",
    "langchain",
    "llamaindex",
    "ai-sdk"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/theGeekist/llm-core.git"
  },
  "homepage": "https://thegeekist.github.io/llm-core/",
  "bugs": {
    "url": "https://github.com/theGeekist/llm-core/issues"
  },
  "author": "Geekist <hello@geekist.co>",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@wpkernel/pipeline": "^0.12.6-beta.3"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./index.ts ./src/workflow/*.ts ./src/adapters/*.ts ./src/adapters/*/*.ts --outdir dist --root . --sourcemap --splitting --format=esm --target=node",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "prepare": "git config core.hooksPath .githooks",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --write",
    "format:check": "prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --check",
    "docs:format": "prettier \"docs/**/*.md\" --write",
    "docs:format:check": "prettier \"docs/**/*.md\" --check",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=text",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc -p tsconfig.test.json --noEmit"
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^2.0.56",
    "@ai-sdk/openai": "^2.0.88",
    "@langchain/community": "^1.1.1",
    "@langchain/core": "^1.1.7",
    "@langchain/ollama": "^1.1.0",
    "@langchain/openai": "^1.2.0",
    "@langchain/textsplitters": "^1.0.1",
    "@llamaindex/openai": "^0.4.22",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "ai": "^5.0.116",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-sonarjs": "0.24.0",
    "langchain": "^1.2.2",
    "llamaindex": "^0.12.1",
    "ollama": "^0.6.3",
    "ollama-ai-provider-v2": "^1.5.5",
    "openai": "^6.15.0",
    "prettier": "3.3.3",
    "zod": "^4.2.1",
    "zod-to-json-schema": "^3.25.0",
    "vitepress": "^1.3.4"
  },
  "imports": {
    "#workflow": "./src/workflow/index.ts",
    "#workflow/*": "./src/workflow/*.ts",
    "#adapters": "./src/adapters/index.ts",
    "#adapters/*": "./src/adapters/*/index.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./workflow": {
      "types": "./dist/src/workflow/index.d.ts",
      "import": "./dist/src/workflow/index.js",
      "default": "./dist/src/workflow/index.js"
    },
    "./workflow/*": {
      "types": "./dist/src/workflow/*.d.ts",
      "import": "./dist/src/workflow/*.js",
      "default": "./dist/src/workflow/*.js"
    },
    "./adapters": {
      "types": "./dist/src/adapters/index.d.ts",
      "import": "./dist/src/adapters/index.js",
      "default": "./dist/src/adapters/index.js"
    },
    "./adapters/*": {
      "types": "./dist/src/adapters/*/index.d.ts",
      "import": "./dist/src/adapters/*/index.js",
      "default": "./dist/src/adapters/*/index.js"
    }
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
