{
  "name": "@geekist/root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test ./packages ./examples",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "typecheck:packages": "bun run --filter '@geekist/llm-core' typecheck",
    "typecheck": "bun run typecheck:packages && bun run typecheck:examples && bun run docs:snippets:typecheck",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --write",
    "docs:dev": "bunx vitepress dev docs",
    "docs:build": "bunx vitepress build docs",
    "docs:preview": "bunx vitepress preview docs",
    "docs:snippets:typecheck": "bun tsc -p docs/snippets/tsconfig.json --noEmit",
    "typecheck:examples": "bun tsc -p examples/agentic/client/tsconfig.json --noEmit && bun tsc -p examples/agentic/server/tsconfig.json --noEmit && bun tsc -p examples/kitchen-sink/client/tsconfig.json --noEmit && bun tsc -p examples/kitchen-sink/server/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "prettier": "3.3.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@types/bun": "latest",
    "@types/node": "^22.13.5",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.0",
    "typescript": "^5.7.3"
  }
}
