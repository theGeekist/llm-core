{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "ignoreDeprecations": "5.0",
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@geekist/llm-core": ["./dist/types/index.d.ts"],
      "@geekist/llm-core/*": ["./dist/types/src/*/index.d.ts"],
      "@examples/*": ["./examples/*"],
      "@assistant-ui/react": ["./node_modules/@assistant-ui/react/dist/index.d.ts"],
      "@assistant-ui/react/*": ["./node_modules/@assistant-ui/react/dist/*"],
      "@assistant-ui/react-ai-sdk": ["./node_modules/@assistant-ui/react-ai-sdk/dist/index.d.ts"],
      "@assistant-ui/react-ai-sdk/*": ["./node_modules/@assistant-ui/react-ai-sdk/dist/*"],
      "@assistant-ui/react-markdown": [
        "./node_modules/@assistant-ui/react-markdown/dist/index.d.ts"
      ],
      "@assistant-ui/react-markdown/*": ["./node_modules/@assistant-ui/react-markdown/dist/*"],
      "react": ["./node_modules/@types/react/index.d.ts"],
      "react/jsx-runtime": ["./node_modules/@types/react/jsx-runtime.d.ts"],
      "react-dom": ["./node_modules/@types/react-dom/index.d.ts"],
      "react-dom/client": ["./node_modules/@types/react-dom/client.d.ts"]
    }
  },
  "exclude": [
    "node_modules/**",
    "examples/**",
    "examples/**/node_modules/**",
    "llm-core/**",
    "pipeline/**",
    "assistant-ui/**",
    "copilot-sdk/**",
    "codex/**"
  ]
}
